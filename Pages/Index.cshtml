@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

    <div class="card" style=" margin-top: 20px">
    <div class="card-header">
        <h1>Bus Fares</h1>
  
     
    </div>
    <div class="card-body">
        <p class="mb-0">20% discount to:</p>
        <ul>

            <li>Children under 12</li>
            <li>Adults over 64</li>
            <li>Disabled people</li>
        </ul>
        <hr />
        <form method="post">
            <div class="form-group">
                <div class="row">
                    <div class="col-4 mb-3">
                        <label asp-for="@Model.busDTO.Name" class="form-label"></label>
                        <input type="text" asp-for="@Model.busDTO.Name" class="form-control">
                    </div>
                    <div class="col-4 mb-3">
                        <label asp-for="@Model.busDTO.Age" class="form-label"></label>
                        <input type="number" class="form-control" asp-for="@Model.busDTO.Age">
                    </div>
                    <div class="col-4 mb-3">
                        <label asp-for="@Model.busDTO.Discount" class="form-label"></label>
                        <input type="number" class="form-control" asp-for="@Model.busDTO.Discount" size="4">
                    </div>
                    <div class="col-4 mb-3">
                        <div class="form-check">
                            <input asp-for="@Model.busDTO.Disabled" class="form-check-input" type="checkbox" id="gridCheck">
                            <label class="form-check-label" asp-for="@Model.busDTO.Disabled"></label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-2">
                        <input type="submit" class="btn btn-primary" value="Submit" asp-action="Index" />
                    </div>

                </div>
           
            </div>

            <hr />
            <div>
                <h3>Bus Fare Prices</h3>
                <div class="row">
                    <div class="col-2">
                        <label asp-for="@Model.busDTO.AshburtonPrice"></label>
                        <input class="form-control"  type="number" asp-for="@Model.busDTO.AshburtonPrice" />
                    </div>
                    <div class="col-2">
                        <label asp-for="@Model.busDTO.TimaruPrice"></label>
                        <input class="form-control" type="number" asp-for="@Model.busDTO.TimaruPrice" />
                    </div>   
                    <div class="col-2">
                        <label asp-for="@Model.busDTO.OmaruPrice"></label>
                        <input class="form-control" type="number" asp-for="@Model.busDTO.OmaruPrice"  />
                    </div>   
                    <div class="col-2">
                        <label asp-for="@Model.busDTO.DunedinPrice"></label>
                        <input class="form-control" type="number" asp-for="@Model.busDTO.DunedinPrice"  />
                    </div>   
                    <div class="col-2">
                        <label asp-for="@Model.busDTO.InvercargillPrice"></label>
                        <input class="form-control" type="number" asp-for="@Model.busDTO.InvercargillPrice" />
                    </div>
                </div>
            
            </div>
        </form>
    </div>
    <div class="card-footer">
        <h3>Results</h3>

        <div class="row">
            @foreach (var item in Model.busDTO.Results)
            {
                <p class="card-text">@item</p>
            }



        </div>
    </div>
</div>